<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cryptoproject.spring_shield.MainController" style="-fx-background-color: #0d0d0d; -fx-border-color: #ffca28; -fx-border-width: 2; -fx-background-radius: 15; -fx-border-radius: 15;">
    <padding>
        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="ðŸŠ" style="-fx-font-size: 35.0;" />
        <Label text="CROCCO SHIELD" textFill="#ffca28" style="-fx-font-weight: bold; -fx-font-size: 26.0;" />
        <Label text="ELITE MILITARY-GRADE ENCRYPTION" textFill="#4caf50" style="-fx-font-family: 'Monospaced'; -fx-font-weight: bold; -fx-font-size: 11.0;" />
    </VBox>

    <VBox spacing="8.0" alignment="CENTER">
        <PasswordField fx:id="passwordField" promptText="Enter security key..." maxWidth="280.0" style="-fx-background-color: #1a1a1a; -fx-text-fill: #ffca28; -fx-prompt-text-fill: #555555; -fx-background-radius: 8; -fx-border-color: #333333; -fx-padding: 10; -fx-alignment: center;" />

        <HBox alignment="CENTER" spacing="4.0" maxWidth="280.0">
            <VBox fx:id="rect1" prefHeight="4.0" prefWidth="85.0" style="-fx-background-color: #333333; -fx-background-radius: 2;" />
            <VBox fx:id="rect2" prefHeight="4.0" prefWidth="85.0" style="-fx-background-color: #333333; -fx-background-radius: 2;" />
            <VBox fx:id="rect3" prefHeight="4.0" prefWidth="85.0" style="-fx-background-color: #333333; -fx-background-radius: 2;" />
        </HBox>
        <Label fx:id="strengthLabel" text="WAITING FOR KEY..." textFill="#555555" style="-fx-font-size: 9px; -fx-font-weight: bold;" />
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Button text="SHIELD FILE (Encrypt)" onAction="#handleEncryptFile" prefWidth="260.0" style="-fx-background-color: #ffca28; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" />
        <Button text="UNSHIELD FILE (Decrypt)" onAction="#handleDecryptFile" prefWidth="260.0" style="-fx-background-color: transparent; -fx-text-fill: #ffca28; -fx-border-color: #ffca28; -fx-border-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" />
    </VBox>

    <VBox spacing="8.0" alignment="CENTER">
        <HBox alignment="CENTER" spacing="30.0">
            <Label text="SECURED FILES LOG" textFill="#ffca28" style="-fx-font-weight: bold; -fx-font-size: 10.0;" />
            <HBox spacing="10.0">
                <Button text="OPEN FOLDER" onAction="#handleOpenFolder" style="-fx-background-color: transparent; -fx-text-fill: #4caf50; -fx-border-color: #4caf50; -fx-border-radius: 4; -fx-font-size: 9px; -fx-cursor: hand;" />
                <Button text="CLEAR" onAction="#handleClearHistory" style="-fx-background-color: transparent; -fx-text-fill: #ff4444; -fx-border-color: #ff4444; -fx-border-radius: 4; -fx-font-size: 9px; -fx-cursor: hand;" />
            </HBox>
        </HBox>
        <ListView fx:id="historyList" prefHeight="90.0" maxWidth="280.0" style="-fx-background-color: #1a1a1a; -fx-control-inner-background: #1a1a1a; -fx-background-radius: 5; -fx-border-color: #333333;" />
    </VBox>

    <VBox alignment="CENTER" spacing="2.0">
        <Label text="DRAG AND DROP FILES TO SHIELD" textFill="#555555" style="-fx-font-weight: bold; -fx-font-size: 9.0;" />
        <Label text="STATUS: CROCCO IS ON GUARD" textFill="#4caf50" style="-fx-font-style: italic; -fx-font-size: 10.0;" />
    </VBox>
</VBox>