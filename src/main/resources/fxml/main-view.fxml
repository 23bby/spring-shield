<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cryptoproject.spring_shield.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="SpringShield - Proteggi i tuoi File" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <PasswordField fx:id="passwordField" promptText="Inserisci password di protezione" maxWidth="300.0"/>

    <Button text="Seleziona File e Cripta" onAction="#handleSelectFile" prefWidth="200.0"/>
</VBox>